{
    "name": "haemanthus/codeigniter3-ide-helper",
    "description": "Dynamically add type hints to your CodeIgniter 3 controllers and models",
    "type": "library",
    "homepage": "https://github.com/yusuftaufiq/codeigniter3-ide-helper",
    "license": "MIT",
    "authors": [
        {
            "name": "Yusuf T.",
            "email": "dev.yusuftaufiq@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "bin": [
        "bin/ide-helper"
    ],
    "autoload": {
        "psr-4": {
            "Haemanthus\\CodeIgniter3IdeHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "dumper:start": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor/bin/var-dump-server --format=html > dump.html"
        ],
        "dumper:serve": [
            "Composer\\Config::disableProcessTimeout",
            "@php -S localhost:8000 dump.html"
        ]
    },
    "require": {
        "php": ">=7.4",
        "nikic/php-parser": "^4.13",
        "mnapoli/silly": "^1.8",
        "php-di/php-di": "^6.3",
        "symfony/finder": "^5.4",
        "spatie/enum": "^3.12",
        "symfony/filesystem": "^5.4"
    },
    "require-dev": {
        "psy/psysh": "@stable",
        "symfony/var-dumper": "^5.4",
        "phpunit/phpunit": "^9.5",
        "spatie/phpunit-snapshot-assertions": "^4.2",
        "nunomaduro/phpinsights": "^2.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
